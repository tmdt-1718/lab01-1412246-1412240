<div class = "row" >
<%@images.each do |image|%>
  <div class = "col-sm-3">
    <div class = "album-image">
        <%=link_to (image_tag image.avatar.url),image %>
    </div>
  </div>
<%end%>
</div>

<%if user_signed_in? && current_user.id  = @album.user_id %>
<div class = "add-image">
  <%=form_for :image , url:new_image_path do |f| %>
    <%= f.file_field :avatar %>
    <div class = "choose-file">
    <%=f.submit "Submit"%>
    </div>
  <%end%>
</div>
<%end%>
